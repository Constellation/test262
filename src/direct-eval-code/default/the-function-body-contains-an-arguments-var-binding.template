/*---
path: language/eval-code/direct/the-function-body-contains-an-arguments-var-binding-
name: Declare |arguments| when the function body contains an |arguments| var-binding.
esid: sec-evaldeclarationinstantiation
---*/

assert.sameValue("arguments" in this, false, "No global 'arguments' binding at beginning");

function f(p = /*{ eval-code }*/) {
  var arguments;
  /*{ body }*/
}
assert.throws(SyntaxError, f);

assert.sameValue("arguments" in this, false, "No global 'arguments' binding at end");
